<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="@color/logo_orange_lite"
                android:endColor="@color/logo_orange_dark"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FFF1F0" />
            <corners
                android:radius="7dp"/>
        </shape>
    </item>

</layer-list>